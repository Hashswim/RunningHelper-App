<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:id="@+id/mainLayout"
    android:orientation="vertical" android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:id="@+id/title1"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:gravity="center" android:textStyle="bold" android:textSize="40sp"
        android:text="Select Street"
        android:fontFamily="@font/font"
        />


    <ScrollView android:id="@+id/scroll" android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:id="@+id/linearLayout" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent">

    <Button
        android:id="@+id/place1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textSize="40sp"
        android:text="SEOUL"
        android:textColor="#FFFFFF"
        android:gravity="right|top"
        android:background="@drawable/seoul"
        />

    <Button
        android:id="@+id/place2"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textSize="40sp"
        android:text="NEWYORK"
        android:textColor="#FFFFFF"
        android:gravity="right|top"
        android:background="@drawable/newyork"/>

    <Button
        android:id="@+id/place3"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textSize="40sp"
        android:text="PARIS"
        android:textColor="#FFFFFF"
        android:gravity="right|top"
        android:background="@drawable/paris"/>

    <Button
        android:id="@+id/place4"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textSize="40sp"
        android:text="BALI"
        android:textColor="#FFFFFF"
        android:gravity="right|top"
        android:background="@drawable/bali"/>

</LinearLayout>

</ScrollView>

</LinearLayout>